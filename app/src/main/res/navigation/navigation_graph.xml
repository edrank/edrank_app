<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeTeacherFragment"
        android:name="com.example.edrank_app.ui.teacher.HomeTeacherFragment"
        android:label="fragment_home_teacher"
        tools:layout="@layout/fragment_home_teacher" >
        <action
            android:id="@+id/action_homeTeacherFragment_to_teacherProfileFragment"
            app:destination="@id/teacherProfileFragment" />
        <action
            android:id="@+id/action_homeTeacherFragment_to_scorecardFragment"
            app:destination="@id/scorecardFragment" />
        <action
            android:id="@+id/action_homeTeacherFragment_to_teacherReviewsFragment"
            app:destination="@id/teacherReviewsFragment" />
        <action
            android:id="@+id/action_homeTeacherFragment_to_viewMore"
            app:destination="@id/viewMore" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.edrank_app.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeStudentFragment"
            app:destination="@id/homeStudentFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeParentFragment"
            app:destination="@id/homeParentFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeTeacherFragment"
            app:destination="@id/homeTeacherFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_credentialsFragment"
            app:destination="@id/credentialsFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeStudentFragment"
        android:name="com.example.edrank_app.ui.student.HomeStudentFragment"
        android:label="fragment_home_student"
        tools:layout="@layout/fragment_home_student" >
        <action
            android:id="@+id/action_homeStudentFragment_to_studentProfileFragment"
            app:destination="@id/studentProfileFragment" />
        <action
            android:id="@+id/action_homeStudentFragment_to_collegeFeedbackForm"
            app:destination="@id/collegeFeedbackForm" />
        <action
            android:id="@+id/action_homeStudentFragment_to_grievanceCell"
            app:destination="@id/grievanceCell" />
        <action
            android:id="@+id/action_homeStudentFragment_to_viewMore"
            app:destination="@id/viewMore" />
    </fragment>
    <fragment
        android:id="@+id/homeParentFragment"
        android:name="com.example.edrank_app.ui.parent.HomeParentFragment"
        android:label="fragment_home_parent"
        tools:layout="@layout/fragment_home_parent" >
        <action
            android:id="@+id/action_homeParentFragment_to_parentProfileFragment"
            app:destination="@id/parentProfileFragment" />
        <action
            android:id="@+id/action_homeParentFragment_to_collegeFeedbackForm"
            app:destination="@id/collegeFeedbackForm" />
        <action
            android:id="@+id/action_homeParentFragment_to_viewMore"
            app:destination="@id/viewMore" />
    </fragment>
    <fragment
        android:id="@+id/reviewsFragment"
        android:name="com.example.edrank_app.ui.teacher.ReviewsFragment"
        android:label="fragment_reviews"
        tools:layout="@layout/fragment_reviews" />
    <fragment
        android:id="@+id/studentProfileFragment"
        android:name="com.example.edrank_app.ui.student.StudentProfileFragment"
        android:label="fragment_student_profile"
        tools:layout="@layout/fragment_student_profile" />
    <fragment
        android:id="@+id/teacherProfileFragment"
        android:name="com.example.edrank_app.ui.teacher.TeacherProfileFragment"
        android:label="fragment_teacher_profile"
        tools:layout="@layout/fragment_teacher_profile" />
    <fragment
        android:id="@+id/parentProfileFragment"
        android:name="com.example.edrank_app.ui.parent.ParentProfileFragment"
        android:label="fragment_parent_profile"
        tools:layout="@layout/fragment_parent_profile" />
    <fragment
        android:id="@+id/scorecardFragment"
        android:name="com.example.edrank_app.ui.teacher.ScorecardFragment"
        android:label="fragment_scorecard"
        tools:layout="@layout/fragment_scorecard" />
    <fragment
        android:id="@+id/teacherReviewsFragment"
        android:name="com.example.edrank_app.ui.teacher.TeacherReviewsFragment"
        android:label="TeacherReviewsFragment" >
        <action
            android:id="@+id/action_teacherReviewsFragment_to_reviewsFragment"
            app:destination="@id/reviewsFragment" />
        <action
            android:id="@+id/action_teacherReviewsFragment_to_questionsFragment"
            app:destination="@id/questionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionsFragment"
        android:name="com.example.edrank_app.ui.teacher.QuestionsFragment"
        android:label="fragment_questions"
        tools:layout="@layout/fragment_questions" />
    <fragment
        android:id="@+id/collegeFeedbackForm"
        android:name="com.example.edrank_app.ui.feedback.CollegeFeedbackForm"
        android:label="fragment_college_feedback_form"
        tools:layout="@layout/fragment_college_feedback_form" />
    <fragment
        android:id="@+id/grievanceCell"
        android:name="com.example.edrank_app.ui.grievance.grievanceCell"
        android:label="fragment_grievance_cell"
        tools:layout="@layout/fragment_grievance_cell" />
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.edrank_app.ui.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" />
    <fragment
        android:id="@+id/viewMore"
        android:name="com.example.edrank_app.ViewMore"
        android:label="fragment_view_more"
        tools:layout="@layout/fragment_view_more" />
    <fragment
        android:id="@+id/credentialsFragment"
        android:name="com.example.edrank_app.ui.CredentialsFragment"
        android:label="CredentialsFragment" />
</navigation>